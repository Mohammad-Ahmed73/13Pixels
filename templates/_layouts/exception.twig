{% extends '_layouts/global' %}

{% block site %}
	<div class="mx-auto max-w-xl space-y-3">
		<h1 class="text-2xl font-medium">
			{{ exception.heading }}
		</h1>

		<div class="text-base">
			{{ exception.text }}
		</div>

		{% if exception.code %}
			<div class="font-mono bg-slate-100 p-2 text-xs">
				{{ statusCode }} - {{ message }}<br />
				(Line {{ line }}) {{ file }}
			</div>
		{% endif %}
	</div>
{% endblock %}
