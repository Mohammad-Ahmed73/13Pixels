{%- minify -%}
{% set slides = block.sliderImages.all() %}
{% set slideCount = slides|length %}

{# {% set wrapperOuterClass = 'w-full grid lg:grid-cols-12' %}
{% set wrapperInnerClass = 'col-span-12 w-full' %}
{% set headingClass = 'max-w-full text-left' %} #}

{% embed '_components/section' with {
    paddingX: 'flush',
    paddingY: 'sectionPadding',
    maxWidth: true,
} %}

    {% block sectionContent %}
<div class="grid gap-y-4 gap-x-4 sm:grid-cols-2 mb-8 lg:mb-16">
                {# Heading Section #}
                    {% if block.heading|length %}
                        {% include '_components/heading' with {
                            tag: 'h2',
								size: '6xl',
								text: block.heading,
								class: 'text-dark font-bold'
                        } %}
                    {% endif %}

                        {% if block.description|length %}
                            {% include '_components/richText' with {
                                class: 'text-[#0E0A20CC] text-md', 
                                content: block.description
                            } %}
                        {% endif %}
                </div>
                    {# Image Section #}
                    <div class="grid grid-cols-12">
                        <div class="col-span-4">
                            
                        </div>
                        <div class="col-span-8">
                        </div>
                    </div>
